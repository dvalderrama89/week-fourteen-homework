<div class="row">
    <form class="col s12 post-create-form">
      <div class="row">
        <div class="input-field col s6">
          <input value="{{post.post_title}}" id="post_title" type="text" class="validate">
          <label for="first_name">Title</label>
        </div>
        <div class="input-field col s6">
            <textarea id="postContent" class="materialize-textarea">{{post.post_body}}</textarea>
            <label for="postContent">Description</label>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" id="updatePost" postId="{{post.id}}" type="submit">Update</button>
            <button class="btn btn-primary" id="deletePost" postId="{{post.id}}" type="submit">Delete</button>
        </div>
      </div>
    </form>
</div>
<script src="/js/update.js"></script>
<script src="/js/delete.js"></script>